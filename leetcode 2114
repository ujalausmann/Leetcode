#include <string.h>

int mostWordsFound(char** sentences, int sentencesSize){
    int maxWords = 0;
    
    for (int i = 0; i < sentencesSize; i++) {
        char *s = sentences[i];
        if (s == NULL || s[0] == '\0') {
            if (maxWords < 0) maxWords = 0; // defensive, but usually not needed
            continue;
        }

        int spaces = 0;
        for (int j = 0; s[j] != '\0'; j++) {
            if (s[j] == ' ') spaces++;
        }
        int words = 1 + spaces; // words = spaces + 1 (for non-empty sentence)
        if (words > maxWords) maxWords = words;
    }

    return maxWords;
}
