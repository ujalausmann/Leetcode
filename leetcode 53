#include <stdio.h>

int maxSubArray(int* nums, int numsSize) {
    int maxSoFar = nums[0];
    int maxEndingHere = nums[0];

    for (int i = 1; i < numsSize; i++) {
        if (maxEndingHere < 0)
            maxEndingHere = nums[i];
        else
            maxEndingHere += nums[i];

        if (maxEndingHere > maxSoFar)
            maxSoFar = maxEndingHere;
    }

    return maxSoFar;
}
